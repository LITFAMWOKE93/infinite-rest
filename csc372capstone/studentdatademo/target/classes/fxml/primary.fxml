        </HBox>

        <HBox layoutX="116.0" layoutY="280.0">
            <children>
                <Label text="GPA" styleClass="padded-label"  />
                <TextField fx:id="inputField" prefWidth="40" promptText=". . ."/>
            </children>
        </HBox>

        

        <!-- Second Button -->
        <Button fx:id="submitButton" layoutX="116.0" layoutY="330.0" onAction="#btnSubmitToField" text="Submit"/>

        <!-- Third Button -->
        <Button layoutX="116.0" layoutY="380.0" onAction="#btnClearFields" text="Reset"/>
