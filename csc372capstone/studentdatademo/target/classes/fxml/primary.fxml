<AnchorPane id="AnchorPane" prefHeight="500" prefWidth="600" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="csc.cap.FXMLController" >
    <children>  


        <!-- Buttons and layout for view panel for list -->
        <Button layoutX="370.0" layoutY="20.0" onAction="#btnSubmitToField" text="Sort"/>
        <Button layoutX="450.0" layoutY="20.0" onAction="#btnSubmitToField" text="Export"/>

        <Pane layoutX="340.0" layoutY="40.0" prefHeight="440" prefWidth="200" style="-fx-background-color: lightgray; -fx-padding: 10px; -fx-background-radius: 10px;">
            <ScrollPane layoutX="10.0" layoutY="30.0" prefHeight="400" prefWidth="180" style="-fx-padding: 10px;">
            <content>
